FROM sequentia/dotnet-watch-core-rc2-angular2

VOLUME /app
WORKDIR /app

# Configure the listening port to 80
ENV ASPNETCORE_SERVER.URLS http://*:2000
ENV ASPNETCORE_ENVIRONMENT Development
ENV ASPNETCORE_APPLICATIONNAME MyApplication.Web
ENV ASPNETCORE_DETAILEDERRORS 1
#ENV ASPNET_WEBROOT
#ENV ASPNETCORE_SERVER

EXPOSE 2000

ENTRYPOINT ["/startscript.sh"]
